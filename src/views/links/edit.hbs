<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-header bg-primary">
                    <h5 class="text-center">New Url</h5>
                </div>
                <div class="card-body">
                    <form action="/link/edit/{{links.id_link}}" method="post">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" value="{{links.title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" value="{{links.url}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control">{{links.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send" class="btn btn-primary btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>